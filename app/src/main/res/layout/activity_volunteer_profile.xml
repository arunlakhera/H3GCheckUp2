<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.VolunteerProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:src="@drawable/h3g_icon" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_back_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="@dimen/margin_4x"
        android:background="@drawable/bg_pattern"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_4x"
                android:layout_marginLeft="@dimen/margin_4x"
                android:layout_marginEnd="@dimen/margin_4x"
                android:layout_marginRight="@dimen/margin_4x"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_4x"
                    android:layout_marginLeft="@dimen/margin_4x"
                    android:layout_marginTop="@dimen/margin_10x"
                    android:layout_marginEnd="@dimen/margin_4x"
                    android:layout_marginRight="@dimen/margin_4x"
                    android:text="@string/update_detail_title"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_medium" />

                <View
                    android:layout_width="@dimen/line_width"
                    android:layout_height="@dimen/line_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_2x"
                    android:layout_marginBottom="@dimen/margin_4x"
                    android:background="@color/colorLineBlue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2x"
                    android:layout_marginLeft="@dimen/margin_2x"
                    android:layout_marginEnd="@dimen/margin_2x"
                    android:layout_marginRight="@dimen/margin_2x"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView_UserPhoto"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/h3g_icon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2x"
                    android:layout_marginLeft="@dimen/margin_2x"
                    android:layout_marginEnd="@dimen/margin_2x"
                    android:layout_marginRight="@dimen/margin_2x"
                    android:saveEnabled="false"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_FirstName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_x"
                        android:layout_marginLeft="@dimen/margin_x"
                        android:layout_marginTop="@dimen/margin_x"
                        android:layout_marginEnd="@dimen/margin_x"
                        android:layout_marginRight="@dimen/margin_x"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/edittext_FirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_x"
                            android:layout_marginLeft="@dimen/margin_x"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:layout_marginRight="@dimen/margin_x"
                            android:layout_marginBottom="@dimen/margin_x"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="@string/first_name"
                            android:inputType="text"
                            android:textSize="@dimen/text_medium" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinputlayout_LastName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_x"
                        android:layout_marginLeft="@dimen/margin_x"
                        android:layout_marginTop="@dimen/margin_x"
                        android:layout_marginEnd="@dimen/margin_x"
                        android:layout_marginRight="@dimen/margin_x"
                        android:enabled="false"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/edittext_LastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_x"
                            android:layout_marginLeft="@dimen/margin_x"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:layout_marginRight="@dimen/margin_x"
                            android:layout_marginBottom="@dimen/margin_x"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="@string/Last_name"
                            android:inputType="text"
                            android:textSize="@dimen/text_medium" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinputlayout_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2x"
                    android:layout_marginLeft="@dimen/margin_2x"
                    android:layout_marginTop="@dimen/margin_x"
                    android:layout_marginEnd="@dimen/margin_2x"
                    android:layout_marginRight="@dimen/margin_2x">

                    <EditText
                        android:id="@+id/edittext_Phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_x"
                        android:layout_marginLeft="@dimen/margin_x"
                        android:layout_marginEnd="@dimen/margin_x"
                        android:layout_marginRight="@dimen/margin_x"
                        android:layout_marginBottom="@dimen/margin_x"
                        android:enabled="false"
                        android:focusable="false"
                        android:hint="@string/phone"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textSize="@dimen/text_medium" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2x"
                    android:layout_marginLeft="@dimen/margin_2x"
                    android:layout_marginEnd="@dimen/margin_2x"
                    android:layout_marginRight="@dimen/margin_2x"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_Gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_2x"
                        android:layout_marginLeft="@dimen/margin_2x"
                        android:layout_marginTop="@dimen/margin_2x"
                        android:layout_marginEnd="@dimen/margin_2x"
                        android:layout_marginRight="@dimen/margin_2x"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/edittext_Gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_x"
                            android:layout_marginLeft="@dimen/margin_x"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:layout_marginRight="@dimen/margin_x"
                            android:layout_marginBottom="@dimen/margin_x"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="@string/gender"
                            android:inputType="text"
                            android:textSize="@dimen/text_small" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_DOB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_2x"
                        android:layout_marginLeft="@dimen/margin_2x"
                        android:layout_marginTop="@dimen/margin_2x"
                        android:layout_marginEnd="@dimen/margin_2x"
                        android:layout_marginRight="@dimen/margin_2x"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/edittext_DOB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_x"
                            android:layout_marginLeft="@dimen/margin_x"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:layout_marginRight="@dimen/margin_x"
                            android:layout_marginBottom="@dimen/margin_x"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="@string/date_of_birth"
                            android:inputType="text"
                            android:textSize="@dimen/text_small" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinputlayout_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2x"
                    android:layout_marginLeft="@dimen/margin_2x"
                    android:layout_marginTop="@dimen/margin_2x"
                    android:layout_marginEnd="@dimen/margin_2x"
                    android:layout_marginRight="@dimen/margin_2x">

                    <EditText
                        android:id="@+id/edittext_Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_2x"
                        android:layout_marginLeft="@dimen/margin_2x"
                        android:layout_marginEnd="@dimen/margin_2x"
                        android:layout_marginRight="@dimen/margin_2x"
                        android:layout_marginBottom="@dimen/margin_2x"
                        android:enabled="false"
                        android:focusable="false"
                        android:hint="@string/address"
                        android:inputType="text"
                        android:textSize="@dimen/text_medium" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2x"
                    android:layout_marginLeft="@dimen/margin_2x"
                    android:layout_marginEnd="@dimen/margin_2x"
                    android:layout_marginRight="@dimen/margin_2x"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_City"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_2x"
                        android:layout_marginLeft="@dimen/margin_2x"
                        android:layout_marginTop="@dimen/margin_2x"
                        android:layout_marginEnd="@dimen/margin_2x"
                        android:layout_marginRight="@dimen/margin_2x"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/edittext_City"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_x"
                            android:layout_marginLeft="@dimen/margin_x"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:layout_marginRight="@dimen/margin_x"
                            android:layout_marginBottom="@dimen/margin_x"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="@string/city"
                            android:inputType="text"
                            android:textSize="@dimen/text_small" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_State"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_2x"
                        android:layout_marginLeft="@dimen/margin_2x"
                        android:layout_marginTop="@dimen/margin_2x"
                        android:layout_marginEnd="@dimen/margin_2x"
                        android:layout_marginRight="@dimen/margin_2x"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/edittext_State"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_x"
                            android:layout_marginLeft="@dimen/margin_x"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:layout_marginRight="@dimen/margin_x"
                            android:layout_marginBottom="@dimen/margin_x"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="@string/state"
                            android:inputType="text"
                            android:textSize="@dimen/text_small" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinputlayout_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2x"
                    android:layout_marginLeft="@dimen/margin_2x"
                    android:layout_marginTop="@dimen/margin_2x"
                    android:layout_marginEnd="@dimen/margin_2x"
                    android:layout_marginRight="@dimen/margin_2x">

                    <EditText
                        android:id="@+id/edittext_Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_2x"
                        android:layout_marginLeft="@dimen/margin_2x"
                        android:layout_marginEnd="@dimen/margin_2x"
                        android:layout_marginRight="@dimen/margin_2x"
                        android:layout_marginBottom="@dimen/margin_2x"
                        android:enabled="false"
                        android:focusable="false"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/text_medium" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinputlayout_PanNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2x"
                    android:layout_marginLeft="@dimen/margin_2x"
                    android:layout_marginTop="@dimen/margin_2x"
                    android:layout_marginEnd="@dimen/margin_2x"
                    android:layout_marginRight="@dimen/margin_2x">

                    <EditText
                        android:id="@+id/edittext_PanNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_2x"
                        android:layout_marginLeft="@dimen/margin_2x"
                        android:layout_marginEnd="@dimen/margin_2x"
                        android:layout_marginRight="@dimen/margin_2x"
                        android:layout_marginBottom="@dimen/margin_2x"
                        android:enabled="false"
                        android:focusable="false"
                        android:hint="@string/pan_number"
                        android:inputType="text"
                        android:textSize="@dimen/text_medium" />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="@dimen/line_width"
                    android:layout_height="@dimen/line_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_2x"
                    android:layout_marginBottom="@dimen/margin_4x"
                    android:background="@color/colorLineBlue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Bank Details"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextLabel"
                    android:textSize="@dimen/text_small" />

                <View
                    android:layout_width="@dimen/line_width"
                    android:layout_height="@dimen/line_height"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_2x"
                    android:layout_marginBottom="@dimen/margin_4x"
                    android:background="@color/colorLineBlue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_Top"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/margin_2x"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_ApplicantName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_4x"
                        android:layout_marginLeft="@dimen/margin_4x"
                        android:layout_marginTop="@dimen/margin_4x"
                        android:layout_marginEnd="@dimen/margin_4x"
                        android:layout_marginRight="@dimen/margin_x">

                        <EditText
                            android:id="@+id/edittext_ApplicantName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_2x"
                            android:layout_marginLeft="@dimen/margin_2x"
                            android:layout_marginEnd="@dimen/margin_2x"
                            android:layout_marginRight="@dimen/margin_2x"
                            android:layout_marginBottom="@dimen/margin_2x"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="@string/applicant_name"
                            android:inputType="text"
                            android:textSize="@dimen/text_medium" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_BankName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_4x"
                        android:layout_marginLeft="@dimen/margin_4x"
                        android:layout_marginTop="@dimen/margin_4x"
                        android:layout_marginEnd="@dimen/margin_4x"
                        android:layout_marginRight="@dimen/margin_x">

                        <EditText
                            android:id="@+id/edittext_BankName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_2x"
                            android:layout_marginLeft="@dimen/margin_2x"
                            android:layout_marginEnd="@dimen/margin_2x"
                            android:layout_marginRight="@dimen/margin_2x"
                            android:layout_marginBottom="@dimen/margin_2x"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="@string/bank_name"
                            android:inputType="text"
                            android:textSize="@dimen/text_medium" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_AccountNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_4x"
                        android:layout_marginLeft="@dimen/margin_4x"
                        android:layout_marginTop="@dimen/margin_4x"
                        android:layout_marginEnd="@dimen/margin_4x"
                        android:layout_marginRight="@dimen/margin_x">

                        <EditText
                            android:id="@+id/edittext_AccountNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_2x"
                            android:layout_marginLeft="@dimen/margin_2x"
                            android:layout_marginEnd="@dimen/margin_2x"
                            android:layout_marginRight="@dimen/margin_2x"
                            android:layout_marginBottom="@dimen/margin_2x"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="@string/bank_acct"
                            android:inputType="number"
                            android:textSize="@dimen/text_medium" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textinput_IFSCCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_4x"
                        android:layout_marginLeft="@dimen/margin_4x"
                        android:layout_marginTop="@dimen/margin_4x"
                        android:layout_marginEnd="@dimen/margin_4x"
                        android:layout_marginRight="@dimen/margin_x">

                        <EditText
                            android:id="@+id/edittext_IFSCCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_2x"
                            android:layout_marginLeft="@dimen/margin_2x"
                            android:layout_marginEnd="@dimen/margin_2x"
                            android:layout_marginRight="@dimen/margin_2x"
                            android:layout_marginBottom="@dimen/margin_2x"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="@string/bank_ifsc"
                            android:inputType="text"
                            android:textSize="@dimen/text_medium" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_6x"
                        android:layout_marginLeft="@dimen/margin_6x"
                        android:layout_marginTop="@dimen/margin_4x"
                        android:layout_marginEnd="@dimen/margin_6x"
                        android:layout_marginRight="@dimen/margin_6x"
                        android:layout_marginBottom="@dimen/margin_x"
                        android:text="Please Note"
                        android:textColor="@color/colorTextBlack" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_6x"
                        android:layout_marginLeft="@dimen/margin_6x"
                        android:layout_marginTop="@dimen/margin_x"
                        android:layout_marginEnd="@dimen/margin_6x"
                        android:layout_marginRight="@dimen/margin_6x"
                        android:layout_marginBottom="@dimen/margin_x"
                        android:text="@string/bank_note" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
